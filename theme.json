{
	"title": "JSON schema for WordPress block theme Govwind, settings and styles",
	"$schema": "https://schemas.wp.org/wp/6.9/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "var(--size-content)",
			"wideSize": "var(--size-wide)"
		},
		"color": {
			"defaultPalette": false,
			"palette": [
				{
					"slug": "primary",
					"color": "var(--colour-primary)",
					"name": "Primary"
				},
				{
					"slug": "primary-accent",
					"color": "var(--colour-primary-accent)",
					"name": "Primary (accent)"
				},
				{
					"slug": "site-background",
					"color": "var(--colour-background)",
					"name": "Background"
				},
				{
					"slug": "background-secondary",
					"color": "var(--colour-background-secondary)",
					"name": "Background (secondary)"
				},
				{
					"slug": "foreground-secondary",
					"color": "var(--colour-foreground-secondary)",
					"name": "Foreground (secondary)"
				},
				{
					"slug": "foreground",
					"color": "var(--colour-foreground)",
					"name": "Foreground"
				}
			]
		},
		"typography": {
			"fluid": false,
			"fontSizes": [
				{ "slug": "xs", "size": "var(--font-size-xs)", "name": "Extra Small" },
				{ "slug": "sm", "size": "var(--font-size-sm)", "name": "Small" },
				{ "slug": "base", "size": "var(--font-size-base)", "name": "Base" },
				{ "slug": "lg", "size": "var(--font-size-lg)", "name": "Large" },
				{ "slug": "xl", "size": "var(--font-size-xl)", "name": "Extra Large" },
				{ "slug": "2-xl", "size": "var(--font-size-2-xl)", "name": "2X Large" },
				{ "slug": "3-xl", "size": "var(--font-size-3-xl)", "name": "3X Large" },
				{ "slug": "4-xl", "size": "var(--font-size-4-xl)", "name": "4X Large" },
				{ "slug": "5-xl", "size": "var(--font-size-5-xl)", "name": "5X Large" },
				{ "slug": "6-xl", "size": "var(--font-size-6-xl)", "name": "6X Large" },
				{ "slug": "7-xl", "size": "var(--font-size-7-xl)", "name": "7X Large" },
				{ "slug": "8-xl", "size": "var(--font-size-8-xl)", "name": "8X Large" },
				{ "slug": "9-xl", "size": "var(--font-size-9-xl)", "name": "9X Large" }
			],
			"fontFamilies": [
				{
					"slug": "sans",
					"name": "Sans Serif",
					"fontFamily": "var(--font-family-sans)"
				},
				{
					"slug": "serif",
					"name": "Serif",
					"fontFamily": "var(--font-family-serif)"
				},
				{
					"slug": "mono",
					"name": "Monospace",
					"fontFamily": "var(--font-family-mono)"
				},
				{
					"slug": "inter",
					"name": "Inter",
					"fontFamily": "var(--font-family-inter)"
				},
				{
					"slug": "pt-sans",
					"name": "PT Sans",
					"fontFamily": "var(--font-family-pt-sans)"
				}
			]
		},
		"border": {
			"customRadius": true,
			"radius": {
				"none": "var(--radius-none)",
				"sm": "var(--radius-sm)",
				"default": "var(--radius-default)",
				"md": "var(--radius-md)",
				"lg": "var(--radius-lg)",
				"xl": "var(--radius-xl)",
				"2-xl": "var(--radius-2-xl)",
				"3-xl": "var(--radius-3-xl)",
				"full": "var(--radius-full)"
			}
		},
		"spacing": {
			"customPadding": true,
			"customMargin": true,
			"units": ["px", "rem", "%", "vh", "vw"],
			"spacingPresets": [
				{ "name": "0", "slug": "0", "size": "var(--spacing-0)" },
				{ "name": "px", "slug": "px", "size": "var(--spacing-px)" },
				{ "name": "0.5", "slug": "0-5", "size": "var(--spacing-0-5)" },
				{ "name": "1", "slug": "1", "size": "var(--spacing-1)" },
				{ "name": "1.5", "slug": "1-5", "size": "var(--spacing-1-5)" },
				{ "name": "2", "slug": "2", "size": "var(--spacing-2)" },
				{ "name": "2.5", "slug": "2-5", "size": "var(--spacing-2-5)" },
				{ "name": "3", "slug": "3", "size": "var(--spacing-3)" },
				{ "name": "3.5", "slug": "3-5", "size": "var(--spacing-3-5)" },
				{ "name": "4", "slug": "4", "size": "var(--spacing-4)" },
				{ "name": "5", "slug": "5", "size": "var(--spacing-5)" },
				{ "name": "6", "slug": "6", "size": "var(--spacing-6)" },
				{ "name": "7", "slug": "7", "size": "var(--spacing-7)" },
				{ "name": "8", "slug": "8", "size": "var(--spacing-8)" },
				{ "name": "9", "slug": "9", "size": "var(--spacing-9)" },
				{ "name": "10", "slug": "10", "size": "var(--spacing-10)" },
				{ "name": "11", "slug": "11", "size": "var(--spacing-11)" },
				{ "name": "12", "slug": "12", "size": "var(--spacing-12)" },
				{ "name": "14", "slug": "14", "size": "var(--spacing-14)" },
				{ "name": "16", "slug": "16", "size": "var(--spacing-16)" },
				{ "name": "20", "slug": "20", "size": "var(--spacing-20)" },
				{ "name": "24", "slug": "24", "size": "var(--spacing-24)" },
				{ "name": "28", "slug": "28", "size": "var(--spacing-28)" },
				{ "name": "32", "slug": "32", "size": "var(--spacing-32)" },
				{ "name": "36", "slug": "36", "size": "var(--spacing-36)" },
				{ "name": "40", "slug": "40", "size": "var(--spacing-40)" },
				{ "name": "44", "slug": "44", "size": "var(--spacing-44)" },
				{ "name": "48", "slug": "48", "size": "var(--spacing-48)" },
				{ "name": "52", "slug": "52", "size": "var(--spacing-52)" },
				{ "name": "56", "slug": "56", "size": "var(--spacing-56)" },
				{ "name": "60", "slug": "60", "size": "var(--spacing-60)" },
				{ "name": "64", "slug": "64", "size": "var(--spacing-64)" },
				{ "name": "72", "slug": "72", "size": "var(--spacing-72)" },
				{ "name": "80", "slug": "80", "size": "var(--spacing-80)" },
				{ "name": "96", "slug": "96", "size": "var(--spacing-96)" }
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"color": {
			"text": "var(--colour-foreground)"
		},
		"spacing": {
			"blockGap": "var(--wp-block-gap)",
			"padding": {
				"top": "0",
				"bottom": "0",
				"left": "var(--wp-container-padding)",
				"right": "var(--wp-container-padding)"
			}
		},
		"typography": {
			"fontFamily": "var(--font-family-pt-sans)",
			"fontSize": "var(--font-size-base)",
			"textAlign": "left"
		},
		"elements": {
			"body": {
				"typography": {
					"fontSize": "var(--font-size-base)",
					"fontFamily": "var(--font-family-pt-sans)"
				}
			},
			"link": {
				"color": {
					"text": "var(--colour-primary)"
				},
				"typography": {
					"textDecoration": "underline"
				},
				":hover": {
					"color": {
						"text": "var(--colour-primary-accent)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"color": {
						"text": "var(--colour-focus-text)!important",
						"background": "var(--colour-focus-background)"
					},
					"shadow": "0 0 0 2px var(--colour-focus-background)",
					"typography": {
						"textDecoration": "underline"
					},
					"outline": {
						"offset": "2px"
					}
				},
				":focus-visible": {
					"outline": {
						"color": "var(--colour-focus-outline)"
					}
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--font-size-4-xl)",
					"lineHeight": "1.2",
					"fontWeight": "600"
				},
				"spacing": {
					"margin": { "bottom": "var(--spacing-6)" }
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--font-size-3-xl)",
					"lineHeight": "1.3",
					"fontWeight": "500"
				},
				"spacing": {
					"margin": { "bottom": "var(--spacing-4)" }
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--font-size-2-xl)",
					"lineHeight": "1.35",
					"fontWeight": "400"
				},
				"spacing": {
					"margin": { "bottom": "var(--spacing-3)" }
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--font-size-xl)",
					"lineHeight": "1.4",
					"fontWeight": "400",
					"letterSpacing": "0.01em"
				},
				"spacing": {
					"margin": { "bottom": "var(--spacing-2)" }
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--font-size-lg)",
					"lineHeight": "1.4",
					"fontWeight": "400"
				},
				"spacing": {
					"margin": { "bottom": "var(--spacing-1)" }
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--font-size-base)",
					"lineHeight": "1.4",
					"fontWeight": "400",
					"textTransform": "uppercase",
					"letterSpacing": "0.02em"
				},
				"spacing": {
					"margin": { "bottom": "var(--spacing-1)" }
				}
			},

			"button": {
				"color": {
					"background": "var(--colour-primary)",
					"text": "var(--colour-background)"
				},
				"border": {
					"radius": "var(--radius-md)"
				},
				"spacing": {
					"padding": {
						"top": "var(--spacing-2-5)",
						"bottom": "var(--spacing-2-5)",
						"left": "var(--spacing-4)",
						"right": "var(--spacing-4)"
					}
				},
				"typography": {
					"fontSize": "var(--font-size-lg)",
					"lineHeight": "1.75"
				},
				":hover": {
					"color": {
						"background": "var(--colour-primary-accent)"
					}
				},
				":focus": {
					"color": {
						"text": "var(--colour-focus-text)",
						"background": "var(--colour-focus-background)"
					},
					"outline": {
						"color": "var(--colour-foreground)",
						"width": "3px",
						"style": "solid",
						"offset": "0px"
					}
				},
				":focus-visible": {
					"outline": {
						"color": "var(--colour-focus-outline)"
					}
				}
			}
		},
		"blocks": {
			"wb-blocks/reveal": {
				"color": {
					"text": "red"
				}
			},
			"core/paragraph": {
				"spacing": {
					"padding": {
						"right": "var(--prose-max-width-padding)"
					},
					"margin": {
						"bottom": "var(--spacing-4)"
					}
				}
			},
			"core/navigation": {
				"spacing": {
					"padding": {
						"top": "0.75rem",
						"bottom": "0.75rem"
					},
					"margin": {
						"right": "auto",
						"left": "auto"
					}
				}
			},
			"core/search": {
				"elements": {
					"button": {
						"border": {
							"radius": "var(--radius-md)"
						}
					}
				}
			},
			"core/file": {
				"color": {
					"text": "red"
				}
			},
			"core/heading": {
				"typography": {
					"fontFamily": "var(--font-family-pt-sans)"
				}
			},
			"core/image": {
				"border": {
					"radius": "var(--radius-lg)"
				},
				"elements": {
					"caption": {
						"spacing": {
							"padding": {
								"right": "var(--prose-max-width-padding)"
							}
						}
					}
				}
			},
			"core/separator": {
				"color": {
					"background": "var(--colour-primary)"
				},
				"spacing": {
					"margin": {
						"top": "var(--spacing-8)",
						"bottom": "var(--spacing-8)"
					}
				}
			},
			"core/quote": {
				"border": {
					"color": "var(--colour-primary)",
					"style": "solid",
					"width": "0 0 0 4px"
				},
				"spacing": {
					"padding": {
						"left": "var(--spacing-4)"
					},
					"margin": {
						"bottom": "var(--spacing-6)"
					}
				},
				"typography": {
					"fontSize": "var(--font-size-lg)",
					"fontStyle": "italic"
				}
			},
			"core/code": {
				"color": {
					"background": "var(--colour-muted)",
					"text": "var(--colour-foreground)"
				},
				"border": {
					"radius": "var(--radius-sm)"
				},
				"spacing": {
					"padding": {
						"top": "var(--spacing-1)",
						"bottom": "var(--spacing-1)",
						"left": "var(--spacing-2)",
						"right": "var(--spacing-2)"
					}
				},
				"typography": {
					"fontFamily": "var(--font-family-mono)",
					"fontSize": "var(--font-size-sm)"
				}
			},
			"core/button": {
				"styleVariations": [
					{
						"name": "ghost",
						"label": "Ghost",
						"styles": {
							"color": {
								"text": "red"
							}
						}
					}
				]
			},
			"core/media-text": {
				"styleVariations": [
					{
						"name": "dark-text",
						"label": "Dark Text",
						"styles": {
							"color": {
								"text": "var(--wp--preset--color--black)"
							}
						}
					}
				]
			},
			"core/list": {
				"spacing": {
					"padding": {
						"left": "1.1em /* Use rel units so that indent scales with font size */",
						"right": "var(--prose-max-width-padding)"
					},
					"margin": {
						"left": "0"
					}
				},
				"css": "list-style-type: revert; /* Browser defaults */ &:is(ol) { padding-left: 1.4em; /* Extra space for ol numbers */ }"
			},
			"core/accordion": {
				"spacing": {
					"padding": {
						"right": "var(--prose-max-width-padding)"
					}
				}
			}
		}
	},
	"customTemplates": [
		{
			"name": "full-width",
			"title": "Full Width",
			"postTypes": ["page"]
		},
		{
			"name": "no-sidebar",
			"title": "No Sidebar",
			"postTypes": ["page", "post"]
		},
		{
			"name": "landing",
			"title": "Landing Page",
			"postTypes": ["page"]
		}
	],
	"patterns": [
		"fullscreen-cover-image-gallery",
		"hero-banner-with-overlap-images",
		"govwind/cta-centered",
		"govwind/three-cards",
		"govwind/feature-two-col",
		"govwind/about"
	],
	"templateParts": [
		{
			"area": "header",
			"name": "header-no-search",
			"title": "No Search Bar Header",
			"description": "Header without search functionality - ideal for search result pages."
		},
		{
			"area": "header",
			"name": "header-default",
			"title": "Default Header",
			"description": "Standard header with navigation and logo used by most pages."
		},
		{
			"area": "header",
			"name": "header-inline",
			"title": "Inline Header",
			"description": "Standard header with navigation and logo used by most pages."
		},
		{
			"area": "header",
			"name": "header-minimal",
			"title": "Minimal Header",
			"description": "Simple header with only logo and site title - no navigation."
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Default Footer",
			"description": "Standard site footer with links and information."
		},
		{
			"area": "footer",
			"name": "footer-wide",
			"title": "Footer wide",
			"description": "Standard site footer with links and information."
		}
	]
}
